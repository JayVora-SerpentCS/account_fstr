<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	   <!-- we do not use report tag has we can not set header ref -->
       <record id="account_report_financial" model="ir.actions.report.xml">
            <field name="report_type">webkit</field>
            <field name="report_name">account_financial_report.report</field>
            <field eval="[(6,0,[])]" name="groups_id"/>
            <field eval="0" name="multi"/>
            <field eval="0" name="auto"/>
            <field eval="0" name="header"/>
            <field name="model">account_fstr.category</field>
            <field name="type">ir.actions.report.xml</field>
            <field name="name">Financial Report</field>
            <field name="report_rml">account_financial_report_engine/reports/account_financial_report_engine.mako</field>
            <field name="report_file">account_financial_report_engine/reports/account_financial_report_engine.mako</field>
        </record>

        <record id="property_account_report_financial" model="ir.property">
            <field name="name">account_report_general_ledger_webkit</field>
            <field name="fields_id" ref="report_webkit.field_ir_act_report_xml_webkit_header"/>
            <field eval="'ir.header_webkit,'+str(ref('account_financial_report_engine.report_account_financial'))" model="ir.header_webkit" name="value"/>
            <field eval="'ir.actions.report.xml,'+str(ref('account_financial_report_engine.account_report_financial'))" model="ir.actions.report.xml" name="res_id"/>
        </record>
